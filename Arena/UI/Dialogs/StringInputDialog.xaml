<Window x:Class="Arena.UI.Dialogs.StringInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="110" Width="400"
        Title="" MinHeight="110" MinWidth="400"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    <Grid FocusManager.FocusedElement="{Binding ElementName=_Input}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Ok" Margin="0,10,10,10" Click="Ok_Click" Grid.Column="1" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom" IsDefault="True"/>
        <Button Content="Cancel" Margin="0,10,90,10" HorizontalAlignment="Right" Width="75" Click="Cancel_Click" IsCancel="True" Grid.Column="1" Height="22" VerticalAlignment="Bottom"/>
        <TextBox x:Name="_Input" Height="23" Margin="5,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBlock x:Name="_Prompt" Text="Input:" Height="Auto" Margin="10,12,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
