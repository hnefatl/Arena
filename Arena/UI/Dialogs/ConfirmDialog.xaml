<Window x:Class="Arena.UI.Dialogs.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConfirmDialog" Height="183" Width="386"
        MinHeight="103" MinWidth="300" ResizeMode="CanResize">
    <Grid>
        <StackPanel Margin="0,0,0,37">
            <TextBlock x:Name="_Prompt" Margin="10,10,10,0" VerticalAlignment="Top" TextWrapping="Wrap"/>
        </StackPanel>
        <Button Content="Yes" Margin="0,0,90,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="Yes_Click"/>
        <Button Content="No" Margin="0,0,10,10" IsCancel="True" IsDefault="True" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="No_Click"/>

    </Grid>
</Window>
