<Window x:Class="Arena.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UI="clr-namespace:Arena.UI"
        Title="MainWindow" Height="310" Width="500">
    <Grid>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="209"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto" MinHeight="42"/>
            </Grid.RowDefinitions>
            <UI:BotList x:Name="Bots" Margin="10,10,19,0" Grid.ColumnSpan="2">
                <!-- Loaded dynamically at run-time -->
            </UI:BotList>
            <Button x:Name="Button_AddBot" Grid.Column="0" Grid.Row="1" Content="Add" ToolTip="Add a new bot" HorizontalAlignment="Left" Width="75" Margin="10,10,0,0" Height="22" VerticalAlignment="Top"/>
            <Button x:Name="Button_RemoveBot"  Content="Remove" ToolTip="Remove a bot" Grid.Row="1" HorizontalAlignment="Right" Width="75" Margin="0,10,9,0" Height="22" VerticalAlignment="Top"/>
        </Grid>
        <UI:Coverer x:Name="Cover" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
